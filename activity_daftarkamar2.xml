<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".daftarkamar"
    android:background="@drawable/latar3">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="ROOM LIST JASMINE DORMITORY"
        android:textColor="#935B6E"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <androidx.cardview.widget.CardView
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="30dp"
        app:cardBackgroundColor="#C3D1AFAF"
        app:cardCornerRadius="30dp">

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="120dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="30dp"
            app:cardBackgroundColor="#BF935B6E"
            app:cardCornerRadius="30dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="FIRST FLOOR : 102, 103, 104, 105, 106, 107, 108, 109, 110, 111, 112."
                android:textColor="@color/white"
                android:textStyle="italic"
                android:typeface="sans"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="120dp"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="30dp"
            app:cardBackgroundColor="#BF935B6E"
            app:cardCornerRadius="30dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="SECOND FLOOR : 201, 202, 203, 204, 205, 206, 207, 208, 209, 210, 211, 212."
                android:textColor="@color/white"
                android:textStyle="italic"
                android:typeface="sans"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="120dp"
            android:layout_marginTop="350dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="30dp"
            app:cardBackgroundColor="#BF935B6E"
            app:cardCornerRadius="30dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="THIRD FLOOR : 301, 302, 303, 304, 305, 306, 307, 308, 309, 310, 311, 312."
                android:textColor="@color/white"
                android:textStyle="italic"
                android:typeface="sans"/>
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="660dp"
        android:layout_marginLeft="105dp"
        android:backgroundTint="#935B6E"
        android:text="BOOKING" />

</RelativeLayout>