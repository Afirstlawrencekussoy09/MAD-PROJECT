<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/latar3">

    <TextView
        android:id="@+id/title"
        android:layout_width="720dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="-160dp"
        android:padding="7dp"
        android:text="Jasmine 1 Dormitory"
        android:textAlignment="center"
        android:textColor="#935B6E"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/title1"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:layout_marginTop="-40dp"
        android:layout_marginLeft="20dp"
        android:padding="7dp"
        android:text="Jasmine 1 Dormitory adalah salah satu Asrama wanita dari Universitas Klabat, Jasmine 1 Dormitory terdiri dari tiga lantai, Total dari kamar Jasmine 1 ada 35 kamar dan 1 Kantor dari Kepala Asrama, setiap kamar terdiri dari 4 orang, setiap lantai memiliki lobby masingnya masing-masing."
        android:textColor="#935B6E"
        android:textSize="15sp"
        android:gravity="center"
        android:textStyle="italic"
        android:typeface="sans"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:src="@drawable/gedung"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginStart="5dp"
                android:text="Universitas Klabat - Jasmine 1"
                android:textColor="#855464"
                android:textSize="15sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginStart="5dp"
                android:text="This is a jasmine 1 dormitory"
                android:textColor="#935B6E"
                android:textSize="12sp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:src="@drawable/loby"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="1dp"
                android:text="Universitas Klabat - Jasmine 1"
                android:textColor="#855464"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginStart="5dp"
                android:text="This is a jasmine 1 dormitory lobby"
                android:textColor="#935B6E"
                android:textSize="12sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/ProfileButton"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#A49C7180"
        android:text="Room List"
        android:textSize="16sp"
        app:cornerRadius="20dp"
        android:layout_marginLeft="110dp"
        />


</LinearLayout>