<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".daftarkamar"
    android:background="@drawable/latar3">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="ROOM LIST JASMINE DORMITORY"
        android:textColor="#935B6E"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="150dp"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:src="@drawable/kamar"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginStart="5dp"
                android:text="Universitas Klabat - Jasmine 1"
                android:textColor="#855464"
                android:textSize="15sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginStart="5dp"
                android:text="This is a jasmine 1 dormitory room"
                android:textColor="#935B6E"
                android:textSize="12sp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginTop="370dp"
        android:layout_marginHorizontal="16dp"
        app:cardBackgroundColor="#E6CBCB"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="50dp"
            android:text="DORMITORY FACILITIES"
            android:textColor="#935B6E"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="220dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginEnd="30dp"
            app:cardBackgroundColor="#BFD5AAB8"
            app:cardCornerRadius="30dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="•Kamar Asrama •Kamar Mandi   •Toilet
                •Kantor Kepala asrama                •Lobi Asrama •Gudang Asrama •Tempat Jemuran "
                android:textColor="#804458"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="220dp"
            android:layout_marginTop="-220dp"
            android:layout_marginLeft="200dp"
            app:cardBackgroundColor="#BFD5AAB8"
            app:cardCornerRadius="30dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="•Tempat Tidur  •Kasur                  •Meja Belajar
                •Lemari                 •Rak Sepatu     •Ember Gayung       •WIFI                  •CCTV "
                android:textColor="#804458"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="660dp"
        android:layout_marginLeft="105dp"
        android:backgroundTint="#935B6E"
        android:text="NEXT" />

</RelativeLayout>